@using AspNetCore5_blogsite.Models
@model RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol DÜzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" class="form-control" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label>Role Başlıgı</label>
        <input type="text" name="RoleName" class="form-control" value="@Model.RoleName" />
    </div>

    <button class="btn btn-success">Rolü Güncelle</button>
</form>

